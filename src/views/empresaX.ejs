                        <label for='em_autentica1'> {{lblem_autentica1}}</label> 
                        <input type='checkbox' name='em_autentica2' id='em_autentica2'
                        v-model='rec.em_autentica' value='D'>{{em_autentica2}} 
                        <label for='em_autentica2'> {{lblem_autentica2}}</label> 
                    </div>
                    </div>
                </div>    
                <br>
                 <button @click='crear()' class='btn btn-primary  btn-xs'>{{form_btnActualiza}}</button>
                 <div  style='display: none'>
                     <input v-model='rec.id' type='text'  name='id' >
                 </div>
            </div> 
        </form>
    </section>
</div>

