<div class='container'>
    <div id="contact-form" class="myform">
        <h3 class='text-left'>{{form_title}}</h3>
        <section class='myFormGen'>
           
        
            <div v-if="isSending" class="loading">Enviando...</div>
        <!-- 
            https://codesource.io/sending-emails-with-vuejs-and-nodemailer/ 
            https://stackoverflow.com/questions/46851977/don-t-know-how-to-use-emailjs-with-vuejs
        -->
        <form class="form" @submit="onSubmit">
            <br>
            <div class='myDiv'>
                <div>
                <label for='name' >{{lblct_name}}</label> 
                <input v-model='contact.name'  type='text' class='4u 12u(mobile)'
                required placeholder="Su nombre..." name ='name'> 
                </div>
            </div>
            <div class='myDiv'>
                <div>
                <label for='celular' >{{lblct_celular}}</label> 
                <input v-model='contact.celular'  type='text' class='4u 12u(mobile)'
                required placeholder="Su nombre..." name ='celular'> 
                </div>
            </div>            
            <div class='myDiv'>
                <div>
                <label for='email' >{{lblct_email}}</label> 
                <input v-model='contact.email'  type='email' class='4u 12u(mobile)'
                required placeholder="Su correo electrÃ³nico..." name ='email'> 
                </div>
            </div>            
            <div class='myDiv'>
                <div>
                <label for='mensaje' >{{lblct_message}}</label>   
                <div>          
                <textarea name="mensaje" v-model="contact.message" rows="3" cols="80" placeholder="Mensaje"></textarea>
                </div>
            </div>
            </div>
        <button class='btn btn-primary  btn-xs'>{{btn_send}}</button>
        <br>
        </form>
    </section>
    </div>
</div>

