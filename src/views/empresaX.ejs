    <h3 class='text-left'>{{form_title}}</h3>

    <section class='myFormGen'>
        <form id='idForm'>
          
            <div class='myform'>
                <div class='myDiv' style='display: none'>
                    <div>
                    <label for='id'  >{{lblid}}</label> 
                    </div>
                    <div>
                    <input v-model='rec.id'  type='text' class='4u 12u(mobile)' name ='id'> 
                    </div>
                </div>
                <div class='myDiv'>
                    <div>
                    <label for='em_nombre'  >{{lblem_nombre}}</label> 
                    <input v-model='em_nombre'  type='text' class='4u 12u(mobile)' name ='em_nombre'> 
                    </div>
                </div>
                <div class='myDiv'>
                    <div>
                    <label for='em_direccion' >{{lblem_direccion}}</label> 
                    <input v-model='em_direccion'  type='text' class='4u 12u(mobile)' name ='em_direccion'> 
                    </div>
                </div>
                <div class='myDiv'>
                    <div>
                    <label for='em_zona' >{{lblem_zona}}</label> 
                    <input v-model='rec.em_zona'  type='text' class='4u 12u(mobile)' name ='em_zona'> 
                    </div>
                </div>
                <div class='myDiv'>    
                    <div>
                    <label for='em_localidad' >{{lblem_localidad}}</label> 
                    <input v-model='rec.em_localidad'  type='text' class='4u 12u(mobile)' name ='em_localidad'> 
                    </div>
                </div>
                <div class='myDiv'> 
                    <div>
                    <label for='em_barrio' >{{lblem_barrio}}</label> 
                    <input v-model='rec.em_barrio'  type='text' class='4u 12u(mobile)' name ='em_barrio'> 
                    </div>
                </div>
                <div class='myDiv'> 
                    <div>
                    <label for='em_ciudad' >{{lblem_ciudad}}</label> 
                    <input v-model='rec.em_ciudad'  type='text' class='4u 12u(mobile)' name ='em_ciudad'> 
                    </div>
                </div>                
                <div class='myDiv'>
                    <div>
                    <label for='em_nit' >{{lblem_nit}}</label> 
                    <input v-model='rec.em_nit'  type='text' class='4u 12u(mobile)' name ='em_nit'> 
                    </div>
                </div>
                <div class='myDiv'>
                    <div>
                    <label for='em_telefono' >{{lblem_telefono}}</label> 
                    <input v-model='rec.em_telefono'  type='text' class='4u 12u(mobile)' name ='em_telefono'> 
                    </div>
                </div>
                <div class='myDiv'>
                    <div>
                    <label for='em_email' >{{lblem_email}}</label> 
                    <input v-model='rec.em_email'  type='email' class='4u 12u(mobile)' name ='em_email'> 
                    </div>
                </div>
                <div class='myDiv'>      
                    <div>
                    <label for='em_usuario' >{{lblem_usuario}}</label> 
                    <input v-model='rec.em_usuario'  type='text' class='4u 12u(mobile)' name ='em_usuario'> 
                    </div>
                </div> 
                <div class='myDiv'>
                    <div>
                    <label for='em_sloganppal' >{{lblem_sloganppal}}</label> 
                    <input v-model='rec.em_sloganppal'  type='text' class='4u 12u(mobile)' name ='em_sloganppal'> 
                    </div>
                </div>
                <div class='myDiv'> 
                    <div>
                    <label for='em_slogansec' >{{lblem_slogansec}}</label>                     
                    <input v-model='rec.em_slogansec'  type='text' class='4u 12u(mobile)' name ='em_slogansec'>   
                    </div>                  
                </div>  
                <div class='myDiv'>
                    <div>
                        <label for='em_negocio' >{{lblem_negocio}}</label>
                        <div> 
                            <input type='radio' name='em_negocio' v-model='rec.em_negocio' value='B'>{{lblem_negocio0}} 
                            <input type='radio' name='em_negocio' v-model='rec.em_negocio' value='R'>{{lblem_negocio1}} 
                            <input type='radio' name='em_negocio' v-model='rec.em_negocio' value='C'>{{lblem_negocio2}} 
                        </div>
                    </div>
                </div>
                <div class='myDiv'>
                    <div>
                    <label for='em_observaciones' >{{lblem_observaciones}}</label> 
                    <input v-model='rec.em_observaciones'  type='text' class='4u 12u(mobile)' name ='em_observaciones'> 
                    </div>
                </div>  

                <div class='myDiv'>    
                    <div>
                    <label for='em_autentica' >{{lblem_autentica}}</label> 
                    <div>
                        <input type='checkbox' name='em_autentica0' id='em_autentica0'
